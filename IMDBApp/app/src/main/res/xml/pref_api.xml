<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="@string/pref_sort_desc_key"
        android:summaryOff="@string/pref_desc_false"
        android:summaryOn="@string/pref_desc_true"
        android:title="@string/pref_sort_popularity_desc_label" />

    <ListPreference
        android:defaultValue="@string/pref_year_default_value"
        android:entries="@array/pref_year_option_labels"
        android:entryValues="@array/pref_year_option_values"
        android:key="@string/pref_year_key"
        android:title="@string/pref_year_label" />

</PreferenceScreen>
